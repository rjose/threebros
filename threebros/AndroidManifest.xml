<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="com.badlogic.androidgames.gamedev2d"
      android:versionCode="1"
      android:versionName="1.0">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-sdk android:minSdkVersion="13" android:targetSdkVersion="19"/>
    
    <application android:icon="@drawable/icon" android:label="@string/app_name" android:allowBackup="true">
        <activity android:name="com.alonso.threebros.prototypes.GameDev2DStarter"
                  android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.alonso.threebros.prototypes.CannonTest"
                  android:screenOrientation="landscape"
                  android:configChanges="keyboard|keyboardHidden|orientation"/>
        <activity android:name="com.alonso.threebros.prototypes.MoveTest"
                  android:screenOrientation="landscape"
                  android:configChanges="keyboard|keyboardHidden|orientation"/> 
    </application>
    

</manifest> 